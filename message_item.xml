<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_iv_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="1dp">


        <TextView
            android:id="@+id/m_tvr_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="message"
            android:maxWidth="200dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="@+id/iv_r"
            app:layout_constraintTop_toBottomOf="@+id/iv_r" />

        <TextView
            android:id="@+id/time_r_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:elevation="100dp"
            android:textSize="8sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_r"
            app:layout_constraintEnd_toEndOf="@+id/iv_r" />

        <ImageView
            android:id="@+id/sharephoto_r"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@+id/time_r_photo"
            app:layout_constraintStart_toEndOf="@+id/iv_r"
            app:layout_constraintTop_toTopOf="@+id/iv_r" />

        <ImageView
            android:id="@+id/iv_r"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toTopOf="@+id/m_tvr_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m_tv_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/r_back"
            android:minWidth="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="7dp"
            android:text="message"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/reaction_iv_r"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_laugh"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/m_tv_r"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m_tv_r" />


        <ImageView
            android:id="@+id/reaction_iv_r_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_laugh"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/m_tv_r"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m_tv_r" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_iv_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:padding="1dp">


        <TextView
            android:id="@+id/m_tvs_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="message"
            android:maxWidth="200dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toEndOf="@+id/sharephoto_s"
            app:layout_constraintTop_toBottomOf="@+id/iv_s" />

        <TextView
            android:id="@+id/time_s_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:elevation="100dp"
            android:textSize="8sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_s"
            app:layout_constraintEnd_toEndOf="@+id/iv_s" />

        <ImageView
            android:id="@+id/sharephoto_s"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@+id/time_s_photo"
            app:layout_constraintEnd_toStartOf="@+id/iv_s"
            app:layout_constraintTop_toTopOf="@+id/iv_s" />

        <ImageView
            android:id="@+id/iv_s"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toTopOf="@+id/m_tvs_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/m_tv_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sender_back"
            android:minWidth="50dp"
            android:paddingBottom="5dp"
            android:paddingTop="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="20dp"
            android:text="message"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/reaction_iv_s"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_laugh"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/m_tv_s"
            app:layout_constraintEnd_toEndOf="@+id/m_tv_s"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m_tv_s" />

        <ImageView
            android:id="@+id/reaction_iv_s_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_laugh"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/m_tv_s"
            app:layout_constraintEnd_toEndOf="@+id/m_tv_s"
            app:layout_constraintHorizontal_bias="0.79"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/m_tv_s" />

        <ImageView
            android:id="@+id/tickivsender"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/baseline_check_circle_outline_24"
            app:layout_constraintBottom_toBottomOf="@+id/m_tv_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>